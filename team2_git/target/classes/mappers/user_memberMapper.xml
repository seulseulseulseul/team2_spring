	<insert id = "user_insertMember">
		insert into user(u_id,u_pass,u_name,u_nic,u_email,u_phone) values(#{u_id},#{u_pass},#{u_name},#{u_nic},#{u_email},#{u_phone})
	</insert>
	
	<select id="userCheck" resultType="com.itwill.domain.user_MemberDTO">
		select * from user where u_id=#{u_id} and u_pass=#{u_pass}
	</select>
	
