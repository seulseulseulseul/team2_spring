	<select id="user_list" resultType="com.itwill.domain.user_MemberDTO">
		select * from user
	</select>
	
	<update id="user_updateList">
		update user 
		set   u_cash=#{u_cash}
		where u_id=#{u_id}
	</update>
</mapper>