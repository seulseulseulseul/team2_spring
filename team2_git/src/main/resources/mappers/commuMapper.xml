<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.itwillbs.mapper.CommuMapper">

	<select id = "getMaxNum" resultType="java.lang.Integer">
		select max(c_num) from commu
	</select>

	<insert id = "insertBoard">
		insert into commu(c_num,u_id,nic,subject,content,readcount,date,file) values(#{c_num},#{u_id},#{nic},#{subject},#{content},#{readcount},#{date},#{file})
	</insert>
	
	<select id="getBoardList" resultType="com.itwillbs.domain.CommuDTO">
		select * from commu order by c_num desc limit #{startRow}, #{pageSize}
	</select>
	
	<select id="getBoard" resultType="com.itwillbs.domain.CommuDTO">
		select * from commu where c_num=#{c_num}
	</select>
	
	<select id="numCheck" resultType="com.itwillbs.domain.CommuDTO">
		select * from commu where c_num=#{c_num} and u_id=#{u_id}
	</select>
	
	<update id="updateBoard">
		update commu set subject=#{subject}, content=#{content}, file=#{file} where c_num=#{c_num}
	</update>
	
	<delete id="deleteBoard">
		delete from commu where c_num=#{c_num}
	</delete>
	
	<update id="updateReadcount">
		update commu set readcount=readcount+1 where c_num=#{c_num}
	</update>
	
	<select id="getBoardCount" resultType="java.lang.Integer">
		select count(*) from commu
	</select>
  
</mapper>